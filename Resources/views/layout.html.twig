<!doctype html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!-- Consider adding a manifest.appcache: h5bp.com/d/Offline -->
<!--[if gt IE 8]><!-->
<html class="no-js" lang="{{ lang | default('en') }}">
<!--<![endif]-->
<head>
<meta charset="utf-8" />

<!-- Use the .htaccess and remove these lines to avoid edge case issues.
       More info: h5bp.com/b/378 -->
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

<title>{% block title %}Title{% endblock title %}</title>

{% if site_description is defined %}
<meta name="description" content="{{ site_description }}" />
{% endif %}

{% if site_author is defined %}
<meta name="author" content="{{ site_author }}" />
{% endif %}

<!-- Mobile viewport optimized: h5bp.com/viewport -->
<meta name="viewport" content="width=device-width,initial-scale=1" />

<!-- Place favicon.ico and apple-touch-icon.png in the root directory: mathiasbynens.be/notes/touch-icons -->
{% block favicon %}
<link rel="shortcut icon" href="{{ asset('bundles/millwrightboilerplate/favicon.ico') }}" />
{% endblock favicon %}

{% block stylesheets %}
{% endblock stylesheets %}

{% block javascripts_header %}
    {% include 'MillwrightBoilerplateBundle::js.html.twig' with {'js': 'bundles/millwrightboilerplate/js/modernizr-2.6.2.min.js'} %}
{% block javascripts_header %}
</head>

<body>
    {% block body %}
    {% endblock body %}

    {% block javascripts_pre %}
        {% include 'MillwrightBoilerplateBundle::google_js.html.twig' with {'url': 'jquery/1.8.2/jquery.min.js', path: 'bundles/millwrightboilerplate/js/jquery-1.8.2.min.js'} %}
        {% include 'MillwrightBoilerplateBundle::google_js.html.twig' with {'url': 'jqueryui/1.9.0/jquery-ui.min.js', path: 'bundles/millwrightboilerplate/js/jquery-ui-1.9.0.custom.min.js'} %}
    {% endblock javascripts_pre %}

    <!-- scripts concatenated and minified via build script -->
    {% block javascripts %}
    {% endblock javascripts %}
    <!-- end scripts -->

    {% block document_ready %}
    {% endblock document_ready %}

    {% block javascripts_post %}
    <!--[if lt IE 7 ]>
    {% block javascripts_ie6 %}
        <script defer src="http://ajax.googleapis.com/ajax/libs/chrome-frame/1.0.3/CFInstall.min.js"></script>
        <script defer>window.attachEvent('onload',function(){CFInstall.check({mode:'overlay'})})</script>
    {% endblock javascripts_ie6 %}
    <![endif]-->

    <script defer>
        $(document).ready(function() {
            {{ block('document_ready') }}
        });
    </script>
    {% endblock javascripts_post %}

</body>
</html>
